<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.ProyectoAndroid" parent="Theme.Material3.DayNight">
        <!-- Customize your light theme here. -->

    </style>

    <style name="Theme.ProyectoAndroid" parent="Base.Theme.ProyectoAndroid">
        <item name="colorPrimary">@color/azul_oscuro</item>
        <item name="colorSecondary">@color/azul_medio</item>
        <item name="colorAccent">@color/azul_oscuro</item>
        <item name="actionModeStyle">@style/MyActionModeStyle</item>
    </style>

    <style name="Theme.ProyectoAndroid.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.ProyectoAndroid.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.ProyectoAndroid.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>